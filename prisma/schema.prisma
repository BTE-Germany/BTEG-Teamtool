// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model reminder {
    id      String  @id @map("_id")
    time    Int
    user    String
    channel String
    message String
    pending Boolean
}

model absenceUser {
    id      String @id @map("_id")
    status  Int
    until   Int?
}

model absencePanel {
    id      String @id @map("_id")
}

model absenceRole {
    id      String @id @map("_id")
    emote   String?
}

